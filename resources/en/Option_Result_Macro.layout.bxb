layout-macro-def(option-result-macro) {
  params {
    param (option) {
      type (Option)
      min (Required)
      max (One)
    }
  }

  content {
    title-card: title-area {
      slot1: text("#{value(option.text)}")
      slot2 {
          single-line: text("#{value(option.ratio)}")
        }
    }
  }
}
