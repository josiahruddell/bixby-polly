endpoints {
  action-endpoints {
    action-endpoint (FindPoll) {
      accepted-inputs (search)
      local-endpoint (FindPoll.js)
    }
    action-endpoint (FetchPollDetails) {
      accepted-inputs (name, $vivContext)
      local-endpoint (FetchPollDetails.js)
    }
    action-endpoint (RecordVote) {
      accepted-inputs (poll, option, $vivContext)
      local-endpoint (RecordVote.js)
    }
  }
}
